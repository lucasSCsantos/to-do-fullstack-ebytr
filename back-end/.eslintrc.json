{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "trybe-backend",
    "parserOptions": {
        "ecmaVersion": 13
    },
    "rules": {
        // "indent": [
        //     "error",
        //     "tab"
        // ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "complexity": [
            "error", { "max": 10 }
        ]
    }
}
